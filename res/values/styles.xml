<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Alipay theme. -->
    <style name="Alipay" parent="AppBaseTheme">
        <item name="android:background">#fff</item>
    </style>

    <!-- 底部按钮风格 -->
    <style name="footerButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">43dp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:shadowColor">#000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:background">#00000000</item>
        <item name="android:textSize">@dimen/footerBtnTextSize</item>
    </style>

    <!-- 蓝色头部 -->
    <style name="blueHeader">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:background">#27b</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">#fff</item>
    </style>

    <!-- 文本输入框 -->
    <style name="inputText" parent="@android:style/Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:layout_height">41dp</item>
        <item name="android:textColor">#ccc</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingLeft">11dp</item>
        <item name="android:layout_marginBottom">13dp</item>
    </style>
    
    <!-- 下栏框 -->
    <style name="spinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">43dp</item>
        <item name="android:background">@drawable/spinner</item>
        <item name="android:textColor">#666</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginBottom">13dp</item>
        <item name="android:paddingLeft">11dp</item>
    </style>
    
    <!-- 确定按钮 -->
    <style name="ok_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">43dp</item>
        <item name="android:textColor">#834a00</item>
        <item name="android:textSize">19sp</item>
        <item name="android:shadowColor">#fff</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:background">@drawable/ok_btn_style</item>
    </style>
    
    <!-- 蓝色按钮 -->
    <style name="blue_btn_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">43dp</item>
        <item name="android:textColor">#496ea3</item>
        <item name="android:textSize">19sp</item>
        <item name="android:shadowColor">#fff</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:background">@drawable/blue_btn_style</item>
    </style>
    
    <!-- 复选框 -->
    <style name="checkbox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@drawable/checkbox_style</item>
    </style>
    
    <!-- 超链接 -->
    <style name="link">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">#27b</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <!-- 淘宝和支付宝登录页面共用样式 -->
    <style name="loginType">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="loginTypeText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:shadowColor">#000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:textColor">#d6d6d6</item>
    </style>
    <style name="loginTypeHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">#27b</item>
    </style>
    
    <!-- 文本样式 -->
    <style name="text1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#666</item>
    </style>
    
    <!-- 头像 -->
    <style name="avatar">
        <item name="android:layout_width">58dp</item>
        <item name="android:layout_height">58dp</item>
        <item name="android:shadowColor">#000</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:padding">2dp</item>
        <item name="android:background">@drawable/avatar_style</item>
    </style>
    
    <!-- 右箭头样式 -->
    <style name="arrow_right">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">0dp</item>
        <item name="android:background">@drawable/arrow_right_bg</item>
    </style>
    
    <!-- 底部tab样式 -->
    <style name="footerTab">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/footer_tab_bg</item>
    </style>
    <style name="footerTabButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>